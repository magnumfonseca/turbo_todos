<div class= "relatibe bg-gray-800 p-1 rounded-full text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" do %>

  <div class="ml-3 relative">
    <div>
      <span class="sr-only">View notifications</span>
      <svg class="h-6 w-6 notice-menu-button" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
      </svg>
      <%= tag.div id: :notifications_count do %>
        <%= render "layouts/navbar/notifications_count", count: 0 %>
      <% end %>
    </div>

    <%= turbo_stream_from "notices" %>
    <ul id="notices" class="notice-menu hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
      <!-- Active: "bg-gray-100", Not Active: "" -->
      <li class="block px-4 py-2 text-sm text-gray-700">notificação</li>
    </ul>
  </div>
</div>

<script>
  const notice_btn = document.querySelector('.notice-menu-button');
  const notice_menu = document.querySelector('.notice-menu');

  notice_btn.addEventListener("click", () => { notice_menu.classList.toggle("hidden"); });
</script>
